<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <!-- Name Label -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="TimeSlot:" />

    <TextView
        android:id="@+id/timestamp_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/bookingid_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/customer_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/source_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/destination_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/numberofpeople_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <Spinner
        android:id="@+id/spinner5"
        android:background="@drawable/dhruv_spinner_background_holo_light"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinner4"
        android:layout_marginTop="17dp"
        android:entries="@array/people_list"
        android:prompt="@string/No_of_People" />

    <Button
        android:id="@+id/button1"
        style="@style/ButtonText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="addExisting"
        android:background="@drawable/dhruv_btn_default_holo_light"
        android:textColor="#00FF00"
        android:text="Join!" />

</LinearLayout>